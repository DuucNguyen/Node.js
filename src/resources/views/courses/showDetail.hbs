<div class="mt-5">
    <div class="m-auto container row">
        <div class="mt-4 col-md-8 col-left">
            <div class="mb-5 course-introduction">
                <h2 class="mb-3 fs-2 fw-bold">{{course.name}}</h2>
                <p>{{course.description}}</p>
            </div>
            <div class="mb-5 course-knowledge">
                <h4 class="mb-4 fw-bold">What will you gain ? </h4>
                <ul class="course-value d-flex flex-wrap" style="list-style: none; padding: 0px;">
                    {{#each course.values}}
                        <li><i class="me-2 fa-solid fa-check" style="color: #0ebe1a;"></i>
                            {{this}}
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="course-requirements">
                <h4 class="fw-bold mb-4">Requirements</h4>
                <ul class="course-requirement d-flex flex-wrap" style="list-style: none; padding: 0px;">
                    {{#each course.requirements}}
                        <li><i class="me-2 fa-solid fa-check" style="color: #0ebe1a;"></i>
                            {{this}}
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="m-auto col-md-4 col-right">
            <iframe
                class="m-auto"
                width="460"
                height="280"
                src="https://www.youtube.com/embed/{{course.videoID}}?si=6iOHmFmHPoQZbIjg"
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                referrerpolicy="strict-origin-when-cross-origin"
                allowfullscreen
            ></iframe>
            <div class="d-flex flex-column course-infor">
                <form
                    action="/courses/save"
                    method="post"
                    id="form-save"
                    class="form-save text-center"
                >
                    <input type="hidden" name="courses_id" value="{{course._id}}" />
                    <button class="mt-3 course-register-btn">Register</button>
                </form>
                <p><i class="fa-solid fa-money-bill"></i> Price: <span>{{course.price}}</span></p>
                <p><i class="fa-solid fa-graduation-cap"></i> Level: <span>{{course.level}}</span></p>
                <p><i class="fa-solid fa-film"></i> Videos: <span>{{course.numberOfVideos}}</span></p>
                <p><i class="fa-solid fa-clock"></i> Total Hours: <span>{{course.totalHours}}</span></p>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () { $(".bookmark-btn").on("click",
    function () { var result = confirm("Add bookmark to this course ?"); if (result) {
    $("#form-save").submit(); } }); $(".remove-bookmark-btn").on("click", function () { var result =
    confirm("Remove bookmark from this course ?"); if (result) {
    $("#form-remove-bookmark").submit(); } }); });
</script>