<div class="mt-5">
    <div class="container mt-5">
        <h2>Update Course</h2>
        <form method="post" action="/courses/{{course._id}}?_method=PUT">
            <div class="form-group mb-3">
                <label for="name">Name:</label>
                <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    value="{{course.name}}"
                />
            </div>
            <div class="form-group mb-3">
                <label for="description">Description:</label>
                <textarea
                    class="form-control"
                    id="description"
                    name="description"
                >{{course.description}}</textarea>
            </div>
            <div class="form-group mb-3">
                <label for="image">Image URL:</label>
                <input
                    type="text"
                    class="form-control"
                    id="image"
                    name="image"
                    value="{{course.image}}"
                />
            </div>
            <div class="form-group mb-3">
                <label for="videoID">Video ID:</label>
                <input
                    type="text"
                    class="form-control"
                    id="videoID"
                    name="videoID"
                    value="{{course.videoID}}"
                />
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>