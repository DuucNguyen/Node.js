<div class="mt-1 d-flex">
    <div>
        <div class="side-wrappper d-flex flex-column">
            <ul class="">
                <li><a class="side-wrapper-item" href="/"><i
                            class="fa-solid fa-house-user"
                        ></i><span>Home</span></a></li>
                <li><a class="side-wrapper-item" href="/me/stored/courses"><i
                            class="fa-solid fa-box-archive"
                        ></i><span>Courses</span></a></li>
                <li><a class="side-wrapper-item" href=""><i class="fa-solid fa-newspaper"></i><span
                        >News</span></a></li>
                <li><a class="side-wrapper-item" href=""><i
                            class="fa-solid fa-skull-crossbones"
                        ></i><span>Not</span></a></li>
            </ul>
        </div>
    </div>
    <div class="d-flex courses-container flex-wrap">
        {{#each courses}}
            <div class="course m-1">
                <div class="m-3">
                    <a href="/courses/{{slug}}" class="a-img text-decoration-none fs-6">
                        <img src="{{actualImagePath}}" class="mb-2" alt="{{name}}" />
                        <span class="mb-2">{{name}}</span><br />
                        <span><i class="fa-solid fa-star" style="color: #FFD43B;"></i>
                            Free</span>
                    </a>
                </div>
            </div>
        {{else}}
            <div>
                <i class="fa-solid fa-circle-info"></i>
                <span>
                    No course to display
                </span>
                <a href="/courses/create">
                    Create a new Course
                </a>
            </div>
        {{/each}}

    </div>
</div>