<div class="authentication-main-container d-flex">
    <div class="login-content-img col-lg-6">
        <img src="img\loginImage.png" alt="" />
    </div>
    <div class="login-content-main col-lg-6">
        <div class="login-content-forms mb-5">
            <button class="btn btn-outline-danger">Sign up</button>
            <button class="btn btn-outline-danger">Sign in</button>
        </div>
        <div class="login-content-social-media mb-4">
            <a class="mb-2 p-3 btn btn-outline-dark col-lg-12" href="#"><i
                    class="fa-brands fa-google"
                ></i>
                Log in with Google</a>
            <a class="mt-2 p-3 btn btn-outline-dark col-lg-12" href="#"><i
                    class="fa-brands fa-facebook"
                ></i>
                Log in with Facebook</a>
        </div>
        <div class="break-point mb-4 col-lg-12">
            <span>OR EMAIL</span>
        </div>
        <div class="login-content-email">
            <form class="row g-3" action="authentication/login" method="POST">
                <div class="">
                    <label for="validationServer01" class="form-label"><i
                            class="fa-solid fa-user"
                        ></i>
                        Username</label>
                    <input
                        type="text"
                        class="form-control is-valid"
                        name="username"
                        id="validationServer01"
                        required
                    />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="">
                    <label for="validationServer02" class="form-label"><i
                            class="fa-solid fa-lock"
                        ></i>
                        Password</label>
                    <input
                        type="text"
                        class="form-control is-valid"
                        name="password"
                        id="validationServer02"
                        required
                    />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="col-12">
                    {{! <div class="form-check">
                        <input
                            class="form-check-input is-invalid"
                            type="checkbox"
                            value=""
                            id="invalidCheck3"
                            aria-describedby="invalidCheck3Feedback"
                            required
                        />
                        <label class="form-check-label" for="invalidCheck3">
                            Agree to terms and conditions
                        </label>
                        <div id="invalidCheck3Feedback" class="invalid-feedback">
                            You must agree before login.
                        </div>
                    </div> }}
                    {{locals.message.loginFailed}}
                </div>
                <div class="col-12">
                    <button style="width: 100%;" class="p-3 btn btn-primary" type="submit">Sign in</button>
                </div>
            </form>
            <div class="col-12">
                <button style="width: 100%;" class="p-2 btn btn-outline-success" type="submit">Are
                    you new? Create an account</button>
            </div>
        </div>
    </div>
</div>